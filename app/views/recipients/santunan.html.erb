<div class="container">
  <div class="row">
    <% unless @recipients.blank? %>
    <h4>Penerima Santunan Bulanan</h4>

    <table class="table table-hover table-striped table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Lahir</th>
          <th>Alamat</th>
          <th>Job</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @recipients.each do |recipient| %>
          <tr>
            <td><%= link_to recipient.name, recipient %></td>
            <td><%= recipient.lahir %></td>
            <td><%= recipient.alamat_lengkap %></td>
            <td><%= recipient.job %></td>
            <% if signed_in? %>
            <td><%= link_to 'Edit', edit_recipient_path(recipient) %></td>
            <td><%= link_to 'Destroy', recipient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>

    <br>
    <% if signed_in? %>
    <%= link_to 'Tambah Santunan', new_recipient_path %>
    <% end %>
  </div>
</div>

