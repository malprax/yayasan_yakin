<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <% unless @recipients.blank? %>
      <h4>Penerima Santunan Bulanan</h4>

      <table class="table table-hover table-striped table-condensed">
        <thead>
          <tr>
            <th>Nama</th>
            <th>Tempat, Tanggal Lahir</th>
            <th class="hidden-xs hidden-sm">Alamat</th>
            <th>Pekerjaan</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @recipients.each do |recipient| %>
            <tr>
              <td><%= link_to recipient.name, recipient %></td>
              <td><%= recipient.lahir %></td>
              <td class="hidden-xs hidden-sm"><%= recipient.alamat_lengkap %></td>
              <td><%= recipient.job %></td>
              <% if signed_in? %>
              <td><%= link_to '<span class="glyphicon glyphicon-edit" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Edit"></span>'.html_safe, edit_recipient_path(recipient) %></td>
              <td><%= link_to '<span class="glyphicon glyphicon-remove" aria-hidden="true"data-toggle="tooltip" data-placement="top" title="Hapus"></span>'.html_safe, recipient, method: :delete, data: { confirm: 'Anda Yakin Hapus?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>

      <br>
      <% if signed_in? %>
      <%= link_to 'Tambah Santunan', new_recipient_path %>
      <% end %>
      
    </div>
  </div>
</div>

