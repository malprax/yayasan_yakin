<div class="container-fluid">
  <div class="row">
    <div class="col-sm-8 col-md-8">
      <%= form_for(@recipient, :html => { class:"form-horizontal", role:"form"}) do |f| %>
        <% if @recipient.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@recipient.errors.count, "error") %></h2>

            <ul>
            <% @recipient.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="form-group">
          <%= f.label :name, "Nama", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :name, class: "form-control weight", id:"inputText3", placeholder:"input nama" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :nik, "No KTP", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :nik, class: "form-control weight", id:"inputText3", placeholder:"input no ktp" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :born_place, "Tempat Lahir", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :born_place, class: "form-control weight", id:"inputText3", placeholder:"input tempat lahir" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :born_date, "Tanggal Lahir", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :born_date, class: "datepicker form-control weight", id:"inputText3", placeholder:"input tanggal lahir" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :gender, "Jenis Kelamin", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight" %>
          <div class="col-sm-8 col-md-4">
            <%= f.select :gender, ['Laki - laki', 'Perempuan'],{prompt:"input jenis kelamin"},class: "form-control weight", id:"inputText3" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :blood_type, "Golongan Darah", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight" %>
          <div class="col-sm-8 col-md-4">
            <%= f.select :blood_type, ['A', 'B', 'AB', '0'],{prompt:"input jenis golongan darah"},class: "form-control weight", id:"inputText3" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :address, "Alamat", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :address, class: "form-control weight", id:"inputText3", placeholder:"input alamat" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :rukun_tetangga, "Rukun Tetangga", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :rukun_tetangga, class: "form-control weight", id:"inputText3", placeholder:"input rukun tetangga" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :rukun_warga, "Rukun Warga", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :rukun_warga, class: "form-control weight", id:"inputText3", placeholder:"input rukun warga" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :kelurahan, "Kelurahan", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :kelurahan, class: "form-control weight", id:"inputText3", placeholder:"input rukun kelurahan" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :kecamatan, "Kecamatan", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :kecamatan, class: "form-control weight", id:"inputText3", placeholder:"input kecamatan" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :city, "Kota", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :city, class: "form-control weight", id:"inputText3", placeholder:"input kota" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :religion, "Agama", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :religion, class: "form-control weight", id:"inputText3", placeholder:"input agama" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :marital_status, "Status Perkawinan", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight" %>
          <div class="col-sm-8 col-md-4">
            <%= f.select :marital_status, ['Kawin', 'Belum Kawin','Cerai Hidup', 'Cerai Mati'],{prompt:"input jenis kelamin"},class: "form-control weight", id:"inputText3" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :job, "Pekerjaan", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :job, class: "form-control weight", id:"inputText3", placeholder:"input pekerjaan" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :pos_code, "Kode Pos", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :pos_code, class: "form-control weight", id:"inputText3", placeholder:"input kodepos" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :province, "Provinsi", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :province, class: "form-control weight", id:"inputText3", placeholder:"input propinsi" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :nationality, "Negara", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight"  %>
          <div class="col-sm-8 col-md-4">
            <%= f.text_field :nationality, class: "form-control weight", id:"inputText3", placeholder:"input negara" %>
          </div>
        </div>
           
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-3 col-md-offset-3">
             <%= action_name == "new" ? (f.submit "Buat Santunan", class:"btn btn-success"):(f.submit "Edit Santunan", class:"btn btn-success") %>
          </div>
        </div>
      
        <br>
        <% end %>
    </div>
  </div>
</div>
