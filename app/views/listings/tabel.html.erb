<div class="container-fluid">
  <%#= render 'index' %>



    <% unless @listings.blank? %>
    <table class="table table-striped table-bordered table-hover table-condensed">
      <thead>
            <tr><th class="center warnatabelhijau" colspan="13"><%= "Tahun #{@year.tahun}"%></th></tr>
            <tr>
                  <th>Donatur</th>
                  <th class="center"><span class="visible-lg">Januari</span><span class="hidden-lg hidden-xs">Jan</span><span class="hidden-lg visible-xs">1</span></th>
                  <th class="center"><span class="visible-lg">Februari</span><span class="hidden-lg hidden-xs">Feb</span><span class="hidden-lg visible-xs">2</span></th>
                  <th class="center"><span class="visible-lg">Maret</span><span class="hidden-lg hidden-xs">Mar</span><span class="hidden-lg visible-xs">3</span></th>
                  <th class="center"><span class="visible-lg">April</span><span class="hidden-lg hidden-xs">Apr</span><span class="hidden-lg visible-xs">4</span></th>
                  <th class="center"><span class="visible-lg">Mei</span><span class="hidden-lg hidden-xs">Mei</span><span class="hidden-lg visible-xs">5</span></th>
                  <th class="center"><span class="visible-lg">Juni</span><span class="hidden-lg hidden-xs">Jun</span><span class="hidden-lg visible-xs">6</span></th>
                  <th class="center"><span class="visible-lg">Juli</span><span class="hidden-lg hidden-xs">Jul</span><span class="hidden-lg visible-xs">7</span></th>
                  <th class="center"><span class="visible-lg">Agustus</span><span class="hidden-lg hidden-xs">Agt</span><span class="hidden-lg visible-xs">8</span></th>
                  <th class="center"><span class="visible-lg">September</span><span class="hidden-lg hidden-xs">Sep</span><span class="hidden-lg visible-xs">9</span></th>
                  <th class="center"><span class="visible-lg">Oktober</span><span class="hidden-lg hidden-xs">Okt</span><span class="hidden-lg visible-xs">10</span></th>
                  <th class="center"><span class="visible-lg">November</span><span class="hidden-lg hidden-xs">Nov</span><span class="hidden-lg visible-xs">11</span></th>
                  <th class="center"><span class="visible-lg">Desember</span><span class="hidden-lg hidden-xs">Des</span><span class="hidden-lg visible-xs">12</span></th>
            </tr>
      </thead>
      <tbody>
            <% @listings_by_donatur.each do |donatur, listing| %>
            <tr>
                  <td>
                    <span class="visible-lg"><%= donatur %></span>
                    <span class= "hidden-lg hidden-xs" >
                      <% if donatur.split.length > 3 %> 
                          <% if donatur.split[2].length < 2 %>
                              <%= donatur.split[3] %>
                          <% else %>
                          <% end %>
                          <%= donatur.split[0]+" "+donatur.split[1]+" "+donatur.split[2]  %>
                      <% elsif donatur.split.length == 3 %>
                          <%= donatur.split[0]+" "+donatur.split[1]+" "+donatur.split[2].chr  %>
                      <% else %>
                          <%= donatur %>
                      <% end %>
                    </span>
                    
                    <span class= "hidden-lg hidden-xs">
                      <% if donatur.split.length > 3 %> 
                          <% if donatur.split[2].length < 2 %>
                              <%= donatur.split[3] %>
                          <% else %>
                          <% end %>
                          <%= donatur.split[0]+" "+donatur.split[1]+" "+donatur.split[2]  %>
                      <% elsif donatur.split.length == 3 %>
                          <%= donatur.split[0]+" "+donatur.split[1]+" "+donatur.split[2].chr  %>
                      <% else %>
                          <%= donatur %>
                      <% end %>
                    </span>
                    
                  </td>
              <% listing.each do |list| %>
                  <td class="center">
                    <% if signed_in? %>
                      <%= link_to list.id, edit_listing_path(list), id: "list" %>
                      <%= "#{number_to_currency(list.amount, precision: 0, unit: "Rp ")}" %> 
                    <% else %>        
                          <% unless list.amount.blank? %>
                              <%= '<i class="glyphicon glyphicon-ok" aria-hidden="true" id="green"></i>'.html_safe %>
                          <% else %>
                              <%= '<i class="glyphicon glyphicon-remove" aria-hidden="true" id="red"></i>'.html_safe %>
                          <% end %>
                    <% end %>
                  </td>                   
              <% end %>
            </tr>
            <% end %>
      </tbody>
    </table> 
    <% end %> 

</div>


