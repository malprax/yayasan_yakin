<div class="container-fluid">
  <%#= render 'index' %>


  <div class="col-md-12">
    <% unless @listings.blank? %>
    <table class="table table-striped table-bordered table-hover table-condensed">
      <thead>
            <tr><th class="center warnatabelhijau" colspan="13"><%= "Tahun #{@year.tahun}"%></th></tr>
            <tr>
                  <th>Donatur</th>
                  <th class="center">Januari</th>
                  <th class="center">Februari</th>
                  <th class="center">Maret</th>
                  <th class="center">April</th>
                  <th class="center">Mei</th>
                  <th class="center">Juni</th>
                  <th class="center">Juli</th>
                  <th class="center">Agustus</th>
                  <th class="center">September</th>
                  <th class="center">Oktober</th>
                  <th class="center">November</th>
                  <th class="center">Desember</th>
            </tr>
      </thead>
      <tbody>
            <% @listings_by_donatur.each do |donatur, listing| %>
            <tr>
                  <td><%= donatur  %></td>
              <% listing.each do |list| %>
                  <td class="center">
                    <% if signed_in? %>
                      <%= link_to list.id, edit_listing_path(list), id: "list" %>
                      <%= "#{number_to_currency(list.amount, precision: 0, unit: "Rp ")}" %> 
                    <% else %>        
                          <% unless list.amount.blank? %>
                              <%= '<i class="glyphicon glyphicon-ok" aria-hidden="true" id="green"></i>'.html_safe %>
                          <% else %>
                              <%= '<i class="glyphicon glyphicon-remove" aria-hidden="true" id="red"></i>'.html_safe %>
                          <% end %>
                    <% end %>
                  </td>                   
              <% end %>
            </tr>
            <% end %>
      </tbody>
    </table> 
    <% end %> 
  </div> 
</div>


