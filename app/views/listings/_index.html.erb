<div class="col-md-12">
    <p id="notice"><%= notice %></p>
    <table class="table table-hover table-condensed">

      <thead>
        <tr>
          <th>Nama Donatur</th>
          <th>Jumlah</th>
          <th>Tahun</th>
          <th>Bulan</th>   
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @listings.each do |listing| %>
          <tr>
            <th><%= link_to listing.donatur.name, listing rescue nil %></th>
            <td><%= "#{number_to_currency(listing.amount, precision: 0, unit:"Rp ")}" %></td>
            <td><%= listing.year.tahun %></td>
            <td><%= listing.month.bulan  rescue nil %></td>
            <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
            <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>

    </table>

    <br>

    <%= link_to 'New Listing', new_listing_path %>
    
  </div>