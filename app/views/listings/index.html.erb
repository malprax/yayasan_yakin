<div class="container-fluid">
  <%#= render 'index' %>


  <div class="col-md-12">
    <p id="notice"><%= notice %></p>
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Donatur</th>
          <th>Januari</th>
          <th>Februari</th>
          <th>Maret</th>
          <th>April</th>
          <th>Mei</th>
          <th>Juni</th>
          <th>Juli</th>
          <th>Agustus</th>
          <th>September</th>
          <th>Oktober</th>
          <th>November</th>
          <th>Desember</th>
        </tr>
      </thead>
      <tbody>
        <% @listings_by_donatur.each do |donatur, listing| %>
        <tr>
              <td><%= donatur %></td>
              <%#= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" %>
          <%listing.each do |list| %>
              <td>
                  <%#= listing %>
                  <%= list.month.id %>
              </td>
                       
          <% end %>

        </tr>
        <% end %>
      </tbody>

    </table>    
  </div>
  <%= link_to 'Tambah Iuran', new_listing_path %>
</div>


