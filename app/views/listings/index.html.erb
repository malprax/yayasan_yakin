<div class="container-fluid">
  <%#= render 'index' %>


  <div class="col-md-12">
    <p id="notice"><%= notice %></p>
    <% unless @listings.blank? %>
    <table class="table table-hover table-condensed">
      <thead>
            <tr>
                  <th>Donatur</th>
                  <th>Januari</th>
                  <th>Februari</th>
                  <th>Maret</th>
                  <th>April</th>
                  <th>Mei</th>
                  <th>Juni</th>
                  <th>Juli</th>
                  <th>Agustus</th>
                  <th>September</th>
                  <th>Oktober</th>
                  <th>November</th>
                  <th>Desember</th>
            </tr>
      </thead>
      <tbody>
            <% @listings_by_donatur.each do |donatur, listing| %>
            <tr>
                  <td><%= donatur  %></td>
              <% listing.each do |list| %>
                  <td>
                      <%= link_to list.id, list, id: "list" %>
                      <%= "#{number_to_currency(list.amount, precision: 0, unit: "Rp ")}" %>
                  </td>                   
              <% end %>
            </tr>
            <% end %>
      </tbody>
    </table> 
    <% end %> 
  </div> 
</div>


