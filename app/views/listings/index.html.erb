<div class="container-fluid">
  <%#= render 'index' %>


  <div class="col-md-12">
    <p id="notice"><%= notice %></p>
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Donatur</th>
          <th>Januari</th>
          <th>Februari</th>
          <th>Maret</th>
          <th>April</th>
          <th>Mei</th>
          <th>Juni</th>
          <th>Juli</th>
          <th>Agustus</th>
          <th>September</th>
          <th>Oktober</th>
          <th>November</th>
          <th>Desember</th>
        </tr>
      </thead>
      <tbody>
        <% @listings_by_donatur.each do |donatur, listing| %>
        <tr>
          <td><%= link_to donatur, listings_path(@listing) %></td>
          <% listing.each do |list| %>
              <%#= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" %>
              <td><%= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" if list.month.bulan == "Januari"%></td>
              <td><%= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" if list.month.bulan == "Februari"%></td>
              <td><%= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" if list.month.bulan == "Maret"%></td>
              <td><%= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" if list.month.bulan == "April"%></td>
              <td><%= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" if list.month.bulan == "Mei"%></td>
              <td><%= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" if list.month.bulan == "Juni"%></td>
              <td><%= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" if list.month.bulan == "Juli"%></td>
              <td><%= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" if list.month.bulan == "Agustus"%></td>
              <td><%= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" if list.month.bulan == "September"%></td>
              <td><%= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" if list.month.bulan == "Oktober"%></td>
              <td><%= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" if list.month.bulan == "November"%></td>
              <td><%= "#{number_to_currency(list.amount, precision: 0, unit:"Rp ")}" if list.month.bulan == "Desember"%></td>
          <% end %>  
        </tr>
        <% end %>
      </tbody>

    </table>    
  </div>
  <%= link_to 'New Listing', new_listing_path %>
</div>


