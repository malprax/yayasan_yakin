<%= form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :donatur_id, "Nama Donatur" %><br>
   <%= f.collection_select(:donatur_id, Donatur.all, :id, :name, class: "form-control input-sm" ) %> 
  </div>
  
  <div class="form-group">
    <%= f.label :amount, "Jumlah Sumbangan" %><br>
    <%= f.select :amount, [10000, 20000, 25000, 35000, 50000, 100000, 150000, 200000], {include_blank:""}, class: "form-control input-sm" %>
  </div>
   
  <div class="form-group">
    <%= f.submit "Input Iuran", class:"btn btn-primary"%>
  </div>
<% end %>
