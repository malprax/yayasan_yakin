<div class="row">
  <div class="col-sm-8 col-md-8">
      <%= form_for(@listing, :html => { class:"form-horizontal", role:"form"}) do |f| %>
        <% if @listing.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

            <ul>
            <% @listing.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
   
        <div class="form-group">
          <%= f.label :donatur_id, "Nama Donatur", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight" %>
          <div class="col-sm-8 col-md-4"><%= f.collection_select(:donatur_id, Donatur.all, :id, :name, {include_blank:""}, class:"form-control weight", id:"inputText3" ) %> </div>
        </div>
  
        <div class="form-group">
          <%= f.label :amount, "Jumlah Sumbangan", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight" %>
          <div class="col-sm-8 col-md-4"><%= f.select :amount, [10000, 20000, 25000, 35000, 50000, 100000, 150000, 200000], {include_blank:""}, class:"form-control weight", id:"inputText3" %></div>
        </div>
   
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-3 col-md-offset-3">
             <%= action_name == "new" ? (f.submit "Input Iuran", class:"btn btn-success"):(f.submit "Edit Iuran", class:"btn btn-success") %>
          </div>
        </div>
      <% end %>
  </div>
</div>
