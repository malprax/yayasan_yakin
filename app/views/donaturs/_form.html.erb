    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-3 col-md-offset-3">
         <%= action_name == "new" ? (f.submit "Buat Tabel", class:"btn btn-success"):(f.submit "Edit Tabel", class:"btn btn-success") %>
      </div>
    </div>
  <% end %>
  </div>
