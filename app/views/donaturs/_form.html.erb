<div class="row">
  <div class="col-sm-8 col-md-8">
  <%= form_for(@donatur, :html => { class:"form-horizontal", role:"form"}) do |f| %>
    <% if @donatur.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@donatur.errors.count, "error") %> prohibited this donatur from being saved:</h2>

        <ul>
        <% @donatur.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, "Nama", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight" %><br>
