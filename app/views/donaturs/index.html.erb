<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>

      <table class="table table-hover table-condensed">
        <thead>
          <tr>
            <th>Donatur Mesjid Babussalam</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @donaturs.each do |donatur| %>
            <tr>
              <td><%= link_to donatur.name, donatur %></td>
              <td><%= link_to 'Edit', edit_donatur_path(donatur) %></td>
              <td><%= link_to 'Hapus', donatur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Tambah Donatur', new_donatur_path %>
      
    </div>
  </div>
</div>
