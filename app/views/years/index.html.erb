<div class="container-fluid">
  <div class="col-md-12">
      <p id="notice"><%= notice %></p>
      <table class="table table-hover table-condensed">
        <thead>
          <tr>
            <td><h3>Tahun</h3></td>
            <td colspan="2"></td>
          </tr>
        </thead>

        <tbody>
          <% @years.each do |year| %>
            <tr>
              <td><%= link_to year.tahun, year %></td>
              <% if signed_in? %>
              <td><%= link_to 'Edit', edit_year_path(year) %></td>
              <td><%= link_to 'Hapus', year, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <% if signed_in? %>
      <%= link_to 'Tambah Tahun', new_year_path, class: 'btn btn-success' %>
      <% end %>
  </div>
</div>
