<div class="container-fluid">
  <div class="col-md-12">
      <p id="notice"><%= notice %></p>
      <table class="table table-hover table-condensed">
        <thead>
          <tr>
            <th>Tahun</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @years.each do |year| %>
            <tr>
              <td><%= link_to year.tahun, year %></td>
              <td><%= link_to 'Edit', edit_year_path(year) %></td>
              <td><%= link_to 'Hapus', year, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Tambah Tahun', new_year_path, class: 'btn btn-success' %>
  </div>
</div>
